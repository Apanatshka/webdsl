module WebDSL-Keywords

exports

  sorts
    Keyword

  context-free syntax

    Keyword -> Id {reject}  %% (not rejected in HQL as keyword)

  context-free syntax

    "function" -> Keyword
    "return"   -> Keyword
    "as"       -> Keyword
    "define"   -> Keyword
    "for"      -> Keyword

  context-free restrictions

    "as" -/- [a-zA-Z0-9\_]  %% prevent ambiguity between as and asc (used in for-filters)

  context-free syntax